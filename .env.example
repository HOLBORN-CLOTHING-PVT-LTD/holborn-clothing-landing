# Server Configuration

# Set to 'true' to enable sending confirmation emails
SEND_CONFIRMATION_EMAILS=false

# Access Token / API Key protection (Optional)
# API_KEY=some-secret-key

# Email Settings (Required if SEND_CONFIRMATION_EMAILS=true)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# The 'From' address appearing in emails
FROM_ADDRESS=hello@holbornclothing.com
SITE_NAME="Holborn Clothing"
